<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inserirImpressao">


    <View
        android:id="@+id/menuInserirImpressao"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintBottom_toTopOf="@id/inserirProdutoImpressao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/maquina1"
        android:layout_width="110dp"
        android:layout_height="50dp"
        style="@style/TextViewStyleProdutosBlue"
        android:text="Maquina 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/inserirProdutoImpressao"
        app:layout_constraintBottom_toBottomOf="@id/inserirProdutoImpressao"
        app:layout_constraintTop_toTopOf="@id/inserirProdutoImpressao"
        android:layout_marginEnd="30dp"

        />


    <EditText
        android:id="@+id/inserirProdutoImpressao"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:hint="Produto"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/maquina1"
        app:layout_constraintTop_toBottomOf="@id/menuInserirImpressao"
        app:layout_constraintEnd_toStartOf="@id/botaoConfirmar"
        android:layout_marginEnd="30dp"


        />

    <Button
        android:id="@+id/botaoConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:text="Confirmar"
        app:layout_constraintBottom_toBottomOf="@id/inserirProdutoImpressao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/inserirProdutoImpressao"
        app:layout_constraintTop_toTopOf="@id/inserirProdutoImpressao" />

    <Button
        android:id="@+id/botaoTelaInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/blue"
        android:text="Tela Inicial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inserirProdutoImpressao" />


</androidx.constraintlayout.widget.ConstraintLayout>